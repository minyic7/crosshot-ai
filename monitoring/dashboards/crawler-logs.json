{
  "dashboard": {
    "title": "Crawler Logs",
    "uid": "crawler-logs",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Log Stream by Platform",
        "type": "logs",
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "{container=~\"crawler-.*\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 2,
        "title": "Error Logs",
        "type": "logs",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "{container=~\"crawler-.*\"} |= \"ERROR\" or |= \"致命错误\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "wrapLogMessage": true
        }
      },
      {
        "id": 3,
        "title": "Scraping Progress",
        "type": "logs",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "{container=~\"crawler-.*\"} |= \"爬取完成\" or |= \"统计\"",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Log Level Distribution",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "sum by (level) (count_over_time({container=~\"crawler-.*\"} [5m]))",
            "refId": "A",
            "legendFormat": "{{level}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Crawlers",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 20
        },
        "targets": [
          {
            "expr": "count(count_over_time({container=~\"crawler-.*\"} [1m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "X Platform Logs",
        "type": "logs",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 26
        },
        "targets": [
          {
            "expr": "{platform=\"x\"}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "XHS Platform Logs",
        "type": "logs",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 26
        },
        "targets": [
          {
            "expr": "{platform=\"xhs\"}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}

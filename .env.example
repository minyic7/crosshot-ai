# ===========================================
# Crosshot AI Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Debug mode
DEBUG=false

# ===========================================
# Database Settings
# ===========================================
DB_PATH=data/xhs.db

# ===========================================
# Cache Settings (Smart Caching Strategy)
# ===========================================
# Hours before a cached note is considered stale
CACHE_NOTE_TTL_HOURS=24
# Enable version comparison for detecting changes
CACHE_ENABLE_VERSION_COMPARE=true
# Always append new version when changes detected (preserve history)
CACHE_ALWAYS_APPEND_ON_CHANGE=true

# ===========================================
# Crawler Settings
# ===========================================
CRAWLER_MAX_RETRIES=3
CRAWLER_RETRY_DELAY=1.0
CRAWLER_DEFAULT_MAX_NOTES=100
CRAWLER_DEFAULT_SCROLL_COUNT=20
CRAWLER_PLAYWRIGHT_TIMEOUT=60000
CRAWLER_HEADLESS=true

# ===========================================
# XHS (Xiaohongshu) Settings
# ===========================================
# Cookies should be a JSON array string
#
# To get cookies:
# 1. Login to xiaohongshu.com in browser
# 2. Open DevTools -> Application -> Cookies
# 3. Export required cookies as JSON array
#
# Required cookies: a1, web_session, webId, xsecappid
# Optional but recommended: abRequestId, gid, id_token, websectiga, loadts, sec_poison_id, webBuild
#
# Example format (replace with your actual values):
XHS_COOKIES_JSON='[{"name": "a1", "value": "YOUR_A1_VALUE", "domain": ".xiaohongshu.com", "path": "/"}, {"name": "web_session", "value": "YOUR_WEB_SESSION", "domain": ".xiaohongshu.com", "path": "/"}, {"name": "webId", "value": "YOUR_WEB_ID", "domain": ".xiaohongshu.com", "path": "/"}, {"name": "xsecappid", "value": "xhs-pc-web", "domain": ".xiaohongshu.com", "path": "/"}]'

# ===========================================
# X (Twitter) Settings
# ===========================================
# Cookies should be a JSON array string
#
# To get cookies:
# 1. Login to x.com (or twitter.com) in browser
# 2. Open DevTools -> Application -> Cookies
# 3. Export all cookies for .x.com domain as JSON array
#
# Required cookies: auth_token, ct0
# Optional but recommended: twid, guest_id, personalization_id, kdt
#
# Example format (replace with your actual values):
X_COOKIES_JSON='[{"name": "auth_token", "value": "YOUR_AUTH_TOKEN", "domain": ".x.com", "path": "/"}, {"name": "ct0", "value": "YOUR_CT0_VALUE", "domain": ".x.com", "path": "/"}, {"name": "twid", "value": "YOUR_TWID", "domain": ".x.com", "path": "/"}]'

# ===========================================
# Yizhi AI Agent Settings
# ===========================================
# Keywords for AI crawler agents (injected via Docker)
YIZHI_X_KEYWORD=2026年穿搭女
YIZHI_XHS_KEYWORD=2026年穿搭女
YIZHI_MAX_RESULTS=20

# ===========================================
# Grok API Settings (for AI analysis)
# ===========================================
# Get your API key from https://console.x.ai/
GROK_API_KEY=
